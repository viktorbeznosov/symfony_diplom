<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">
    {# Run `composer require symfony/webpack-encore-bundle`
       and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
    <div class="d-flex" id="wrapper">
        {% block sidebar %}
            <div class="bg-light border-right" id="sidebar-wrapper">
                <div class="sidebar-heading"><a href="{{ path("app_account_dashboard") }}" class="main-page-link">BlaBlaArticle</a></div>
                <div class="list-group list-group-flush">
                    <a href="{{ path('app_account_dashboard') }}" class="list-group-item list-group-item-action {% if app.request.attributes.get('_route') ==  'app_account_dashboard' %}active{% endif %}">Рабочий стол</a>
                    <a href="{{ path('app_account_article_create') }}" class="list-group-item list-group-item-action  {% if app.request.attributes.get('_route') ==  'app_account_article_create' %}active{% endif %}">Создать статью</a>
                    <a href="{{ path("app_account_articles_history") }}" class="list-group-item list-group-item-action  {% if app.request.attributes.get('_route') ==  'app_account_articles_history' %}active{% endif %}">История статей</a>
                    <a href="{{ path("app_account_subscribe") }}" class="list-group-item list-group-item-action {% if app.request.attributes.get('_route') ==  'app_account_subscribe' %}active{% endif %}">Подписка</a>
                    <a href="{{ path("app_account_profile") }}" class="list-group-item list-group-item-action {% if app.request.attributes.get('_route') ==  'app_account_profile' %}active{% endif %}">Профиль</a>
                    {% if (is_granted('PRO')) %}
                        <a href="{{ path("app_account_modules") }}" class="list-group-item list-group-item-action {% if app.request.attributes.get('_route') ==  'app_account_modules' %}active{% endif %}">Модули генератора</a>
                    {% endif %}
                </div>
            </div>
        {% endblock %}

        <div id="page-content-wrapper">

            {% block navbar %}
                <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                    <button class="btn btn-primary" id="menu-toggle">Скрыть меню</button>

                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Показать/Скрыть навигацию">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                            <li class="nav-item active">
                                <a class="nav-link" href="{{ path('app_logout') }}">Выйти</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            {% endblock %}

            {% block content %}

            {% endblock %}

        </div>
    </div>
</body>
</html>