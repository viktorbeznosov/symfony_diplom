<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">
    {# Run `composer require symfony/webpack-encore-bundle`
       and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>

<body class="signin-body">

<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Регистрация</h5>
                    {{ form_start(registrationForm, {
                        attr: {
                            class: "form-signin"
                        }
                    }) }}
                        <div class="form-label-group">
                            {{ form_errors(registrationForm.firstName) }}
                            {{ form_widget(registrationForm.firstName, {
                                attr: {
                                    placeholder: 'Ваше имя',
                                    class: "form-control",
                                    id: "inputName"
                                },
                            }) }}
                            <label for="user_registration_form_firstName">Ваше имя</label>
                        </div>
                        <div class="form-label-group">
                            {{ form_errors(registrationForm.email) }}
                            {{ form_widget(registrationForm.email, {
                                attr: {
                                    placeholder: 'Ваш email',
                                    class: "form-control",
                                    id: "inputEmail"
                                },
                            }) }}
                            <label for="user_registration_form_email">Ваш Email</label>
                        </div>
                        <div class="form-label-group">
                            {{ form_errors(registrationForm.password) }}
                            {{ form_widget(registrationForm.password, {
                                attr: {
                                    placeholder: 'Пароль',
                                    class: "form-control",
                                    id: "inputPassword"
                                },
                            }) }}
                            <label for="user_registration_form_password">Пароль</label>
                        </div>
                        <div class="form-label-group">
                            {{ form_errors(registrationForm.confirmPassword) }}
                            {{ form_widget(registrationForm.confirmPassword, {
                                attr: {
                                    placeholder: 'Подтверждение пароля',
                                    class: "form-control",
                                    id: "inputConfirmPassword"
                                },
                            }) }}
                            <label for="user_registration_form_confirmPassword">Подтверждение пароля</label>
                        </div>
                    <button class="form-signin-btn btn btn-lg btn-primary btn-block text-uppercase" type="submit">Регистрация</button>
                    {{ form_end(registrationForm) }}
                    <hr class="my-4">
                    <div class="text-center"><a href="{{ path('app_login') }}">Я уже зарегистрирован</a></div>

                </div>
            </div>
        </div>
    </div>
</div>





</body>

</html>

