{% extends 'base-account.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <h1 class="mt-4">История статей</h1>
        <div class="row">

            <div class="col-xl-8">

                <table class="table table-hover table-bordered">
                    <thead class="thead-light">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Название</th>
                        <th scope="col">Описание</th>
                        <th scope="col">Просмотр</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for article in pagination %}
                            <tr>
                                <th scope="row">1</th>
                                <td>{{ article.title }}</td>
                                <td>{{ article.description }}</td>
                                <td><a href="dashboard_article_detail.html"><i class="fas fa-eye"></i></a> </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">No Articles</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

                {{ knp_pagination_render(pagination, '@KnpPaginator/Pagination/twitter_bootstrap_v4_pagination.html.twig') }}
            </div>
        </div>

    </div>
{% endblock %}